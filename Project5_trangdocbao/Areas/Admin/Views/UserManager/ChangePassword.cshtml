@model Model.EntityFramework.TAIKHOAN
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_User.cshtml";
}

<h2>ChangePassword</h2>
<div class="panel-body">
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert text-success hide" id="alertbox">
            Bạn đã đổi mật khẩu thành công.
        </div>
    }

    @using (Html.BeginForm("ChangePasswordPost", "UserManager", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
        <fieldset>
            <div class="form-group">
                @Html.TextBoxFor(model => model.TenTaiKhoan, new { @class = "form-control", @placeholder = "Username", @readonly = "readonly" })

            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", @placeholder = "PassWord" })

            </div>
            <!-- Change this to a button or input when using this as a form -->
            <button type="submit" class="btn btn-lg btn-success btn-block">Confirm</button>
        </fieldset>
    }

</div>

<script>
        $(document).ready(function () {
            $("#alertbox").removeClass("hide");
            $("#alertbox").delay(2000).slideUp(500);
        });
</script>